.chart-container__lollipop
  position relative
  &:after
    width 100%
    content ''
    height 200px
    background linear-gradient(180deg, rgba(254, 239, 215, 0), #feefd7)
    position absolute
    bottom 0
    left 0
    right 0
  .chart__lollipop
    max-height 5010px
    margin-bottom 2rem
    .lollipop-song-g-wrapper
      .lollipop-song-g
